<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="4"
    app:rowCount="6"
    tools:context="summit.org.summitcalculator.CalculatorActivity">

    <!--TODO Improve this UI-->
    <!--TODO Add ids to text view and button-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/result"
        app:layout_columnSpan="4"
        app:layout_column="0"
        app:layout_row="0"/>

    <!--Row 1-->
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:id="@+id/b7"
        android:text="7"
        app:layout_column="0"
        app:layout_rowWeight="1"
        app:layout_row="1"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:id="@+id/b8"
        android:text="8"
        app:layout_column="1"
        app:layout_row="1"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:id="@+id/b9"
        android:text="9"
        app:layout_rowWeight="1"
        app:layout_column="2"
        app:layout_row="1"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:id="@+id/bp"
        android:text="+"
        app:layout_rowWeight="1"
        app:layout_column="3"
        app:layout_row="1"/>

    <!--Row 2-->
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:id="@+id/b4"
        android:text="4"
        app:layout_column="0"
        app:layout_rowWeight="1"
        app:layout_row="2"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:id="@+id/b5"
        android:text="5"
        app:layout_rowWeight="1"
        app:layout_column="1"
        app:layout_row="2"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:id="@+id/b6"
        android:text="6"
        app:layout_column="2"
        app:layout_row="2"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:id="@+id/bm"
        android:text="-"
        app:layout_rowWeight="1"
        app:layout_column="3"
        app:layout_row="2"/>

    <!--Row 3-->
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:id="@+id/b1"
        android:text="1"
        app:layout_column="0"
        app:layout_rowWeight="1"
        app:layout_row="3"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:id="@+id/b2"
        android:text="2"
        app:layout_rowWeight="1"
        app:layout_column="1"
        app:layout_row="3"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:id="@+id/b3"
        android:text="3"
        app:layout_column="2"
        app:layout_row="3"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:id="@+id/bx"
        android:text="x"
        app:layout_rowWeight="1"
        app:layout_column="3"
        app:layout_row="3"/>


    <!--Row 5-->
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:id="@+id/bd"
        android:text="."
        app:layout_column="0"
        app:layout_rowWeight="1"
        app:layout_row="5"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        android:id="@+id/b0"
        android:text="0"
        app:layout_rowWeight="1"
        app:layout_column="1"
        app:layout_row="5"/>


    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_columnWeight="1"
        app:layout_columnSpan="2"
        android:id="@+id/be"
        android:text="="
        app:layout_rowWeight="1"
        app:layout_column="2"
        app:layout_row="5"/>

</android.support.v7.widget.GridLayout>
